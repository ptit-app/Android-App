<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_view_by_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="#f2f2f2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Thới khóa biểu"
            android:layout_weight="8"

            android:gravity="center"
            android:textColor="#aaaaaa"
            android:textSize="20dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/menu2"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#f2f2f2">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/txtVieưDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"

            android:gravity="center"
            android:textColor="#9f9f9f"
            android:textSize="13sp"
            android:paddingLeft="38dp"


            />

<ImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:src="@drawable/uparrow"
    android:paddingRight="30dp"
    />

    </LinearLayout>
    <TextView
        android:id="@+id/txtViewMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:gravity="center"
        android:textColor="#afafaf"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="#f2f2f2"
        app:compactCalendarTextColor="#8c8c8c"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#ecaaaa"
        app:compactCalendarCurrentDayBackgroundColor="#f2f2f2"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        />


</LinearLayout>