<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ptit.ntnt.ptitapp.NewsActivity"
    android:padding="@dimen/activity_padding">

    <LinearLayout
        android:id="@+id/newsBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#f07233"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Tin Tá»©c PTIT"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="21dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/newsBanner"
        android:padding="5dp">
        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:layout_constraintTop_toBottomOf="@+id/newsBanner"
        android:background="#dddddd"
        android:paddingBottom="50dp"
        android:paddingTop="10dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvNews"
            android:divider="#00000000"
            android:dividerHeight="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
        </ListView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
