<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingLeft="30dp"
    android:paddingTop="100dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txt_tenGV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên GV: "
        android:textSize="20dp"
        android:textColor="#ff00"
        android:paddingVertical="15dp"/>
    <TextView
        android:id="@+id/txt_maGV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã GV: "
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txt_hocviGV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Học vị: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingVertical="15dp"/>
    <TextView
        android:id="@+id/txt_emailGV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txt_chucvuGV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chức vụ: "
        android:textSize="20dp"
        android:paddingVertical="15dp"/>
    <TextView
        android:id="@+id/txt_websiteGV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website: "
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/rtb_GVRatingDeTail"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:numStars="5"
            android:scaleX=".5"
            android:scaleY=".6"
            android:stepSize="1.0"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"

            />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumit Rating"/>
    </LinearLayout>
</LinearLayout>